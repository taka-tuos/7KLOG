<Window x:Class="_7KLOG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7KLOG"
        mc:Ignorable="d"
        Title="7KLOG" Height="400" Width="400" Background="Black" Icon="/root.ico">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="BlurStyle" TargetType="Ellipse">
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="60"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="KeyStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Ellipse Width="43" Height="60" Margin="-10" Grid.Row="0" Grid.Column="2" Fill="{TemplateBinding Background}" Style="{StaticResource BlurStyle}" x:Name="BlurEllipse" Visibility="Hidden"/>
                            <Rectangle Fill="Gray" Width="23.5" Height="40.5" x:Name="MainRect"/>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="MainRect" Property="Fill" Value="White"/>
                                <Setter TargetName="BlurEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubKeyStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Ellipse Width="44" Height="44" Margin="-10" Grid.Row="0" Grid.Column="2" Fill="{TemplateBinding Background}" Style="{StaticResource BlurStyle}" x:Name="BlurEllipse" Visibility="Hidden"/>
                            <Rectangle Fill="Gray" Width="24.5" Height="24.5" x:Name="MainRect"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="MainRect" Property="Fill" Value="White"/>
                                <Setter TargetName="BlurEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TurnTableUpper" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid ClipToBounds="False">
                            <Path Width="294" Height="294" Stroke="Red" StrokeThickness="40" x:Name="BlurArc" Visibility="Hidden">
                                <Path.Effect>
                                    <BlurEffect Radius="40"/>
                                </Path.Effect>
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigureCollection>
                                                <PathFigure StartPoint="57.5545,143.876">
                                                    <PathFigure.Segments>
                                                        <PathSegmentCollection>
                                                            <ArcSegment Size="89.5, 89.5" IsLargeArc="False" SweepDirection="Clockwise" Point="236.4455,143.876" />
                                                        </PathSegmentCollection>
                                                    </PathFigure.Segments>
                                                </PathFigure>
                                            </PathFigureCollection>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path Width="194" Height="194" Stroke="Gray" StrokeThickness="15" x:Name="MainArc">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigureCollection>
                                                <PathFigure StartPoint="7.5545,93.876">
                                                    <PathFigure.Segments>
                                                        <PathSegmentCollection>
                                                            <ArcSegment Size="89.5, 89.5" IsLargeArc="False" SweepDirection="Clockwise" Point="186.4455,93.876" />
                                                        </PathSegmentCollection>
                                                    </PathFigure.Segments>
                                                </PathFigure>
                                            </PathFigureCollection>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="MainArc" Property="Stroke" Value="White"/>
                                <Setter TargetName="BlurArc" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TurnTableLower" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid ClipToBounds="False">
                            <Path Width="294" Height="294" Stroke="Red" StrokeThickness="40" x:Name="BlurArc" Visibility="Hidden">
                                <Path.Effect>
                                    <BlurEffect Radius="40"/>
                                </Path.Effect>
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigureCollection>
                                                <PathFigure StartPoint="236.4455,150.124">
                                                    <PathFigure.Segments>
                                                        <PathSegmentCollection>
                                                            <ArcSegment Size="89.5, 89.5" IsLargeArc="False" SweepDirection="Clockwise" Point="57.5545,150.124"/>
                                                        </PathSegmentCollection>
                                                    </PathFigure.Segments>
                                                </PathFigure>
                                            </PathFigureCollection>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path Width="194" Height="194" Stroke="Gray" StrokeThickness="15" x:Name="MainArc">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigureCollection>
                                                <PathFigure StartPoint="186.4455,100.124">
                                                    <PathFigure.Segments>
                                                        <PathSegmentCollection>
                                                            <ArcSegment Size="89.5, 89.5" IsLargeArc="False" SweepDirection="Clockwise" Point="7.5545,100.124" />
                                                        </PathSegmentCollection>
                                                    </PathFigure.Segments>
                                                </PathFigure>
                                            </PathFigureCollection>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="MainArc" Property="Stroke" Value="White"/>
                                <Setter TargetName="BlurArc" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5,5,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" ItemsSource="{Binding Controllers}" SelectedItem="{Binding SelectedController.Value}" DisplayMemberPath="DisplayString" SelectedIndex="0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton Content="1P" Margin="5" VerticalContentAlignment="Center" Foreground="White" IsChecked="{Binding Is1P.Value}"/>
                    <RadioButton Content="2P" Margin="5" VerticalContentAlignment="Center" Foreground="White" IsChecked="{Binding Is2P.Value}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" IsEnabled="False"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="CN" VerticalAlignment="Center" Foreground="White" Margin="5,0" IsChecked="{Binding EnableCNReleaseCount.Value}"/>
                    <Button Content="Reset" Padding="10,0" Margin="0" Command="{Binding ResetCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>


        <Viewbox Grid.Row="1" Stretch="Uniform" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Canvas Grid.Row="1" HorizontalAlignment="Right" Margin="10,0" VerticalAlignment="Center" Height="15">
                        <Rectangle Width="{Binding NotesPerSecond.Value}" Height="15" Fill="DarkRed" StrokeThickness="0" >
                            <Rectangle.RenderTransform>
                                <ScaleTransform ScaleX="-8.0"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Canvas>


                    <TextBlock Grid.Row="0" Text="{Binding TotalCount.Value}" FontFamily="Consolas" FontSize="20" FontWeight="Bold" Foreground="White" Margin="10,0" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Row="1" FontFamily="Consolas" FontSize="20" FontWeight="Bold" Foreground="White" Margin="10,0" HorizontalAlignment="Right">
                        <Run Text="{Binding NotesPerSecond.Value}"/>
                        <Run Text="/s"/>
                    </TextBlock>
                    <TextBlock Grid.Row="2" FontFamily="Consolas" FontSize="20" FontWeight="Bold" Foreground="White" Margin="10,0" HorizontalAlignment="Right">
                        <Run Text="{Binding AverageRelease.Value}"/>
                        <Run Text="ms"/>
                    </TextBlock>

                    <TextBlock Grid.Row="2" Foreground="White" HorizontalAlignment="Center" Text="Release:" VerticalAlignment="Center" FontSize="14" FontFamily="Consolas" FontWeight="Bold"/>
                </Grid>

                <Grid Grid.Row="0" Margin="20" ClipToBounds="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="TurnTableGrid" Grid.Column="{Binding TurnTableColumn.Value}" VerticalAlignment="Stretch">
                        <ToggleButton Margin="-50,-50" Height="294" Width="294" Style="{StaticResource TurnTableUpper}" IsChecked="{Binding TurnTableUpper.Value}"/>
                        <ToggleButton Margin="-50,-50" Height="294" Width="294" Style="{StaticResource TurnTableLower}" IsChecked="{Binding TurnTableLower.Value}"/>

                        <Ellipse Width="150" Height="150" Fill="White" RenderTransformOrigin="0.5,0.5" Margin="22,22,22,22">
                            <Ellipse.Clip>
                                <PathGeometry >
                                    <PathGeometry.Figures>
                                        <PathFigureCollection>
                                            <PathFigure IsClosed="True" StartPoint="75,75">
                                                <PathFigure.Segments>
                                                    <PathSegmentCollection>
                                                        <LineSegment Point="150,55" />
                                                        <LineSegment Point="150,95" />
                                                    </PathSegmentCollection>
                                                </PathFigure.Segments>
                                            </PathFigure>
                                            <PathFigure IsClosed="True" StartPoint="75,75">
                                                <PathFigure.Segments>
                                                    <PathSegmentCollection>
                                                        <LineSegment Point="0,55" />
                                                        <LineSegment Point="0,95" />
                                                    </PathSegmentCollection>
                                                </PathFigure.Segments>
                                            </PathFigure>
                                        </PathFigureCollection>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Ellipse.Clip>
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="{Binding TurnTableAngle.Value}"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>


                    <Grid Grid.Column="1" x:Name="KeyGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- E1-4 -->
                        <Grid Grid.Row="0" Grid.IsSharedSizeScope="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" SharedSizeGroup="E1to4Height"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="E1to4Height"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton Width="34" Height="34" Grid.Row="0" Grid.Column="1" Margin="3.5" BorderThickness="4.75" IsChecked="{Binding SubButtonPressed[0].Value}" Style="{StaticResource SubKeyStyle}" Background="Bisque"/>
                            <ToggleButton Width="34" Height="34" Grid.Row="0" Grid.Column="2" Margin="3.5" BorderThickness="4.75" IsChecked="{Binding SubButtonPressed[1].Value}" Style="{StaticResource SubKeyStyle}" Background="Bisque"/>
                            <ToggleButton Width="34" Height="34" Grid.Row="0" Grid.Column="3" Margin="3.5" BorderThickness="4.75" IsChecked="{Binding SubButtonPressed[2].Value}" Style="{StaticResource SubKeyStyle}" Background="Bisque"/>
                            <ToggleButton Width="34" Height="34" Grid.Row="0" Grid.Column="4" Margin="3.5" BorderThickness="4.75" IsChecked="{Binding SubButtonPressed[3].Value}" Style="{StaticResource SubKeyStyle}" Background="Bisque"/>
                        </Grid>

                        <!-- 2,4,6 -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <ToggleButton Width="33" Height="50" Grid.Row="0" Grid.Column="1" Margin="4,3,4,3" BorderThickness="4.75" IsChecked="{Binding ButtonPressed[1].Value}" Style="{StaticResource KeyStyle}" Background="{Binding GlowColor[1].Value}"/>
                            <ToggleButton Width="33" Height="50" Grid.Row="0" Grid.Column="2" Margin="4,3,4,3" BorderThickness="4.75" IsChecked="{Binding ButtonPressed[3].Value}" Style="{StaticResource KeyStyle}" Background="{Binding GlowColor[3].Value}"/>
                            <ToggleButton Width="33" Height="50" Grid.Row="0" Grid.Column="3" Margin="4,3,4,3" BorderThickness="4.75" IsChecked="{Binding ButtonPressed[5].Value}" Style="{StaticResource KeyStyle}" Background="{Binding GlowColor[5].Value}"/>
                        </Grid>

                        <!-- 1,3,5,7 -->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton Width="33" Height="50" Grid.Row="0" Grid.Column="1" Margin="4,3,4,3" BorderThickness="4.75" IsChecked="{Binding ButtonPressed[0].Value}" Style="{StaticResource KeyStyle}" Background="{Binding GlowColor[0].Value}"/>
                            <ToggleButton Width="33" Height="50" Grid.Row="0" Grid.Column="2" Margin="4,3,4,3" BorderThickness="4.75" IsChecked="{Binding ButtonPressed[2].Value}" Style="{StaticResource KeyStyle}" Background="{Binding GlowColor[2].Value}"/>
                            <ToggleButton Width="33" Height="50" Grid.Row="0" Grid.Column="3" Margin="4,3,4,3" BorderThickness="4.75" IsChecked="{Binding ButtonPressed[4].Value}" Style="{StaticResource KeyStyle}" Background="{Binding GlowColor[4].Value}"/>
                            <ToggleButton Width="33" Height="50" Grid.Row="0" Grid.Column="4" Margin="4,3,4,3" BorderThickness="4.75" IsChecked="{Binding ButtonPressed[6].Value}" Style="{StaticResource KeyStyle}" Background="{Binding GlowColor[6].Value}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
